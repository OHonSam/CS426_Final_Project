<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_deep_sea"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.hfad.cs426_final_project.CustomUIComponent.ClickableImageView
            android:id="@+id/escape_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/escape_btn"
            android:paddingHorizontal="18dp"
            android:paddingVertical="16dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/Overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overview"
            android:layout_centerInParent="true"
            android:elegantTextHeight="true"
            style="@style/SubHead"
            android:textColor="@color/white"/>
        <com.hfad.cs426_final_project.CustomUIComponent.ClickableImageView
            android:id="@+id/share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share_btn"
            android:paddingHorizontal="18dp"
            android:paddingVertical="14dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/time_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:selectionRequired="true"
        android:layout_marginTop="23dp"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <Button
            android:id="@+id/day_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:backgroundTint="@drawable/toggle_background"
            android:textColor="@color/black"
            style="@style/BodyText"/>
        <Button
            android:id="@+id/week_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Week"
            android:backgroundTint="@drawable/toggle_background"
            style="@style/BodyText"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/month_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month"
            android:backgroundTint="@drawable/toggle_background"
            style="@style/BodyText"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/year_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year"
            android:backgroundTint="@drawable/toggle_background"
            style="@style/BodyText"
            android:textColor="@color/black" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <RelativeLayout
        android:id="@+id/time_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/time_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.hfad.cs426_final_project.CustomUIComponent.ClickableImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="18dp"
            android:src="@drawable/arrow_left"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/time_selection_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="August 31, 2024"
            android:elegantTextHeight="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            style="@style/ButtonText"
            android:clickable="true"
            android:focusable="true"
            android:drawableEnd="@drawable/return_btn"
            android:drawablePadding="3dp">
        </TextView>
        <com.hfad.cs426_final_project.CustomUIComponent.ClickableImageView
            android:id="@+id/forward_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="18dp"
            android:src="@drawable/arrow_right"
            android:layout_alignParentEnd="true"
            />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tree_count"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingEnd="30dp"
            android:paddingVertical="20dp"
            app:layout_constraintTop_toBottomOf="@id/time_selection">
            <TextView
                android:id="@+id/num_live_tree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/black"
                style="@style/SubTitle"
                android:drawableStart="@drawable/live_tree"
                android:drawablePadding="3dp"
                android:paddingEnd="50dp"/>
            <TextView
                android:id="@+id/num_dead_tree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="@color/black"
                style="@style/SubTitle"
                android:drawableStart="@drawable/dead_tree"
                android:drawablePadding="3dp"
                android:layout_toEndOf="@+id/num_live_tree"/>
        </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_container"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Focus time distribution"
                style="@style/SubTitle"/>

            <!-- Focus time distribution card -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/statistic_card">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/total_focused_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 hours 30 mins"
                        android:elegantTextHeight="true"
                        android:textColor="@color/secondary_40"
                        style="@style/SubTitle"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        style="@style/LabelSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/total_focused_time"
                        android:elegantTextHeight="true"
                        android:text="Total focused time"
                        android:paddingTop="3dp"/>
                    <com.hfad.cs426_final_project.CustomUIComponent.MyButton
                        android:id="@+id/view_by_button"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/button_border"
                        android:paddingVertical="0dp"
                        android:backgroundTint="@color/primary_20"
                        android:text="Line chart"
                        android:textAllCaps="false"
                        android:elegantTextHeight="true"
                        android:drawableEnd="@drawable/dropdown"
                        android:drawablePadding="6dp"
                        android:paddingHorizontal="10dp"
                        style="@style/SubTitle"
                        android:layout_alignParentEnd="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View by"
                        android:paddingHorizontal="10dp"
                        style="@style/LabelSmall"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/view_by_button"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/focus_time_chart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@id/view_by_button"
                        android:layout_marginTop="12dp"/>

                </RelativeLayout>
            </FrameLayout>

            <!-- Tag distribution card -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/statistic_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tag distribution"
                        style="@style/SubTitle"/>

                    <!-- Placeholder for pie chart -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </FrameLayout>

            <!-- Favorite types of tree card -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/statistic_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favorite types of tree"
                        style="@style/SubTitle"/>

                    <!-- Placeholder for tree types list -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="179 x 21 Coming soon..."
                        style="@style/BodyText"/>

                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>