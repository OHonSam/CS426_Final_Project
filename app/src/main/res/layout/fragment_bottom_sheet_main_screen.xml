<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen.BottomSheet.BottomSheetMainScreen"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary_50">
        <View
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@color/primary_70" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp">
            <com.hfad.cs426_final_project.CustomUIComponent.MyButton
                android:id="@+id/btnSelection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_border_rec"
                android:backgroundTint="@color/white"
                android:text="Plating Settings"
                android:textAllCaps="false"
                android:textColor="@color/black"
                style="@style/Title"/>
            <com.hfad.cs426_final_project.CustomUIComponent.MyButton
                android:id="@+id/btnFavourite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_border_rec"
                android:backgroundTint="@color/primary_70"
                android:text="My Favourite"
                android:textAllCaps="false"
                android:textColor="@color/white"
                style="@style/Title"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/selectionContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>