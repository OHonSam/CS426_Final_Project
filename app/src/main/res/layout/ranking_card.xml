<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/ranking_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/Accent2">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp">
        <TextView
            android:id="@+id/rankingOutTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:paddingHorizontal="16dp"
            android:layout_marginHorizontal="4dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:elegantTextHeight="true"
            style="@style/SubTitle2" />
        <TextView
            android:id="@+id/rankingTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:paddingHorizontal="16dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:elegantTextHeight="true"
            style="@style/SubTitle2" />
        <ImageView
            android:id="@+id/medal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/medal"
            android:layout_alignEnd="@+id/rankingTop"
            android:layout_alignStart="@+id/rankingTop"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phan Phuc Bao"
            android:elegantTextHeight="true"
            style="@style/BodyText"
            android:layout_centerInParent="true"
            android:paddingVertical="5dp"/>
        <TextView
            android:id="@+id/streak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:text="300"
            style="@style/BodyText"
            android:layout_alignParentEnd="true"
            android:drawablePadding="3dp"
            app:drawableStartCompat="@drawable/streak"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>